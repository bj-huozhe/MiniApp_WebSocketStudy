/**index.wxss**/
.output-content {
  width: 100%;
  height: 300px;
  border-color: gainsboro;
  border-style: solid;
  border-width: 1px;
  padding: 5px;
}

.message-view {
  width: 90%;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.message-input {
  width: auto;
  height: auto;
  border-color: dimgrey;
  border-style: solid;
  border-width: 1px;
  font-size: 15px;
  margin: 10px 0;
}

.btn-group {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}